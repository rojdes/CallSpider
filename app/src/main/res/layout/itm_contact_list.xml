<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_contact_list_height"
    android:layout_marginLeft="@dimen/item_contact_list_margin_horizontal"
    android:layout_marginRight="@dimen/item_contact_list_margin_horizontal"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/iv_item_contact_category_item_direction"
        android:layout_width="@dimen/iv_item_contact_category_size"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_item_contact_category_item_direction"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_item_contact_list_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="KKKKKKK"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_item_contact_list_name_textsize" />

        <TextView
            android:id="@+id/tv_item_contact_list_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="KKKKKKK"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/item_contact_list_space_small"
            android:textSize="@dimen/tv_item_contact_list_number_textsize" />
    </LinearLayout>

</RelativeLayout>