<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/enter_password"
              android:textColor="@android:color/black"
              android:textSize="@dimen/fs_normal"/>
    <EditText android:id="@+id/et_dlg_passsword"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:inputType="numberPassword"
              android:maxLength="16"
              android:maxLines="1"
              android:textSize="@dimen/fs_normal"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:id="@+id/btn_dlg_password_ok" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/ok"
                android:textAllCaps="true"
                android:textColor="@android:color/black" android:textSize="@dimen/fs_normal"/>
        <Button android:id="@+id/btn_dlg_password_cancel" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel"
                android:textAllCaps="true"
                android:textColor="@android:color/black" android:textSize="@dimen/fs_normal"/>
    </LinearLayout>


</LinearLayout>